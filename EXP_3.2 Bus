#include <iostream>
#include <vector>
using namespace std;

int main() {
    int nodes = 20;

    vector<vector<int>> adj(nodes);

    for (int i = 0; i < nodes - 1; i++) {
        adj[i].push_back(i + 1);
        adj[i + 1].push_back(i);
    }

    cout << "BUS TOPOLOGY\n";
    for (int i = 0; i < nodes; i++) {
        cout << "Node " << i << " -> ";
        for (int v : adj[i]) cout << v << " ";
        cout << "\n";
    }

    cout << "\nNode Degrees:\n";
    for (int i = 0; i < nodes; i++)
        cout << "Node " << i << " : " << adj[i].size() << "\n";

    return 0;
}
