#include <iostream>
#include <vector>
using namespace std;

int main() {
    int nodes = 16;
    vector<vector<int>> adj(nodes);

    for (int i = 0; i < nodes; i++) {
        for (int j = i + 1; j < nodes; j++) {
            adj[i].push_back(j);
            adj[j].push_back(i);
        }
    }

    cout << "MESH TOPOLOGY\n";
    for (int i = 0; i < nodes; i++) {
        cout << "Node " << i << " -> ";
        for (int v : adj[i]) cout << v << " ";
        cout << "\n";
    }

    cout << "\nNode Degrees:\n";
    for (int i = 0; i < nodes; i++)
        cout << "Node " << i << " : " << adj[i].size() << "\n";

    return 0;
}
